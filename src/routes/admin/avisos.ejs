<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Drinkers || Avisos</title>
    <link rel="stylesheet" href="/css/admin/avisos.css">
    <link rel="stylesheet" href="/css/admin/header.css">
</head>
<body>
    <header>
        <div class="Content__header">
            <img alt="Logo" src="/images/Logo/Logo.png">
            <a href="#">Salir</a>
        </div>
    </header>
    <nav class="Navigator--bar">
        <ul class="Navigator--bar List">
            <a href="/admin/dashboard" class="Link">
                <Li class="List--cont"><img alt="Proveedores" src="/images/icons/Home.png" title="Home"></Li>
            </a>
            <a href="/admin/inventario" class="Link">
                <Li class="List--cont"><img alt="Inventario" src="/images/icons/Inventario.png" title="Inventario"></Li>
            </a>
            <a href="/admin/estadistica" class="Link">
                <Li class="List--cont"><img alt="Estadistica" src="/images/icons/Estadistica.png" title="Estadistica"></Li>
            </a>
            <a href="/admin/proveedor" class="Link">
                <Li class="List--cont"><img alt="Proveedores" src="/images/icons/proveedor.png" title="Proveedores"></Li>
            </a>
            <a href="/admin/envios" class="Link">
                <Li class="List--cont"><img alt="Envios/pedidos" src="/images/icons/Envios.png" title="Envios/pedidos"></Li>
            </a>
            <a href="/admin/avisos" class="Link">
                <Li class="List--cont"><img alt="Avisos" src="/images/icons/Reporte.png" title="Avisos"></Li>
            </a>
        </ul>
    </nav>
    <main>
        <section class="Content">
            <article class="Reportes--Container">
                <form class="aviso">
                    <div class="Input--Container">
                        <span>Nuevo reporte</span>
                        <div class="Input">
                            <input type="text" placeholder="Escribir el reporte" required>
                            <img src="/images/icons/Cancel.png" alt="icon">
                        </div>
                    </div>
                    <div class="Tipo--aviso">
                        <select required>
                            <option value="Envio">Envio</option>
                            <option value="Proveedor">Proveedor</option>
                            <option value="Personal">Personal</option>
                            <option value="Producto">Producto</option>
                        </select>
                    </div>
                    <div class="Fecha--reporte">
                        <input type="date" required>
                    </div>
                    
                    <button value="Crear Aviso" type="submit">Crear Aviso</button>
                </form>
            </article>
            <article class="Table--Container">
                <table>
                    <caption>Reportes de la empresa</caption>
                    <thead>
                        <tr>
                            <th>Descripci√≥n</th>
                            <th>Tipo</th>
                            <th>Fecha de aviso</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% avisos.forEach(aviso => { %>
                            <tr>
                                <td><%= aviso.descripcion %></td>
                                <td><%= aviso.tipo %></td>
                                <td><%= aviso.fecha %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </article>
        </section>
    </main>
</body>
</html>